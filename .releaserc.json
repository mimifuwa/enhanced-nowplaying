{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "cd packages/extension && npm version ${nextRelease.version} --no-git-tag-version && cd ../.. && cd packages/extension/build && zip -r ../enhanced-nowplaying-v${nextRelease.version}.zip ."
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["packages/extension/package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "packages/extension/enhanced-nowplaying-v*.zip",
            "label": "Enhanced NowPlaying Extension (${nextRelease.version})"
          }
        ]
      }
    ]
  ]
}
